<Page
    x:Class="HelloWorld.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloWorld"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="hello" Height="30" Width="180" Click="hello_Click" HorizontalAlignment="Center">
            <x:String>Hello World</x:String>
        </Button>
        <Button x:Name="exit" Height="30" Click="exit_Click" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,520,0,0">
            <x:String>Exit</x:String>
        </Button>
        <Button x:Name="Todos"  Height="30" Margin="0,79,0,0" VerticalAlignment="Top" Width="63" HorizontalAlignment="Center" Click="Todos_Click">
            <x:String>Todos</x:String>
        </Button>

    </Grid>
</Page>
